# Maintainer: Robson Cardoso dos Santos <cardoso.rcs@gmail.com>
# Contributor: Ivan c00kiemon5ter Kanakarakis <ivan.kanak@gmail.com>

pkgname="markdown"
pkgver=1.0.1
pkgrel=5
pkgdesc="Text to (X)HTML conversion tool for web writers."
arch=('any')
url="http://daringfireball.net/projects/markdown/"
license=('BSD')
depends=('perl')
source=("http://daringfireball.net/projects/downloads/Markdown_${pkgver}.zip")
md5sums=('f17b3c2b2830c6fd2fe0098226e59a2f')

build() {
  cd $srcdir/Markdown_$pkgver
  pod2man "Markdown.pl" > "$srcdir/Markdown_$pkgver/$pkgname.1"
}

package() {
  cd $srcdir/Markdown_$pkgver
  mkdir -p ${pkgdir}/usr/local/{bin,share/licenses/${pkgname},share/man/man1}
  install -m755 "Markdown.pl" "${pkgdir}/usr/local/bin/${pkgname}"
  install -m644 "License.text" "${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE"
  install -m644 "$pkgname.1" "$pkgdir/usr/local/share/man/man1/$pkgname.1"
}
